---

const { title } = Astro.props;

---

<div class="sm:w-1/3 px-0 sm:px-6 pb-6 sm:pb-10">
    <div class="flex items-center space-x-3 px-1 py-1 sm:py-2 font-semibold">
        <div class="text-primary">
            <slot
                    name="icon"/>
        </div>
        <h3>
            {title}
        </h3>
    </div>
    <div class="text-gray-700 max-w-[300px] text-sm sm:text-base ">
        <slot></slot>
    </div>

</div>


